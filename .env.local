# Example .env file for local development with cloud PostgreSQL
# Copy this to .env and fill in your values

# PostgreSQL database URL (get this from your cloud provider)
DATABASE_URL=postgresql://username:password@host:5432/dbname

# Example for Railway:
# DATABASE_URL=postgresql://postgres:password@containers-us-west-123.railway.app:5432/railway

# Example for Render:
# DATABASE_URL=postgresql://user:password@dpg-xxxxx.oregon-postgres.render.com/dbname

# Google Drive credentials (for local development, use files)
# GOOGLE_CREDENTIALS_BASE64=
# GOOGLE_TOKEN_BASE64=

# Or use local files (default):
# config/credentials.json
# token.json

# Podcast configuration (or use config/podcasts.json)
# PODCASTS_CONFIG={"podcasts":[],"settings":{}}

# Flask secret key
SECRET_KEY=dev-secret-key-change-in-production

# Optional: Set download directory for local file mode (leave blank for streaming)
# DOWNLOAD_DIR=downloads

# Port for dashboard (default 5000)
PORT=5000

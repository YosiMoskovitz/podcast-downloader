# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Google Drive OAuth Credentials (base64 encoded JSON)
# To encode: python -c "import base64, json; print(base64.b64encode(json.dumps({...}).encode()).decode())"
GOOGLE_CREDENTIALS_BASE64=

# Google Drive OAuth Token (base64 encoded JSON) - obtained after first OAuth flow
GOOGLE_TOKEN_BASE64=

# Podcast Configuration (JSON)
PODCASTS_CONFIG={"podcasts": [], "settings": {"check_interval_hours": 6, "max_episodes_per_check": 5}}

# Flask secret key for dashboard
SECRET_KEY=change-this-to-a-random-secret-key

# Port (set by cloud provider, default 5000 for local)
PORT=5000
